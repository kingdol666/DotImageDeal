/* General Window Styling */
QMainWindow {
    background-color: transparent; /* Make window transparent */
}

/* This is the main container for the content area */
#contentContainer {
    background-color: rgba(240, 240, 240, 0.85); /* Semi-transparent light background */
    border-radius: 10px;
}

QWidget {
    color: #333333; /* Dark gray text */
    font-family: "Segoe UI", "Roboto", "Helvetica Neue", Arial, sans-serif;
    font-size: 10pt;
}

/* --- Custom Title Bar --- */
#titleBar {
    background-color: transparent;
}
#titleLabel {
    color: #333333;
    font-weight: bold;
    font-size: 11pt;
}
#controlButton, #closeButton {
    background-color: transparent;
    border: none;
    font-size: 12pt;
    font-weight: bold;
    color: #333333;
}
#controlButton:hover {
    background-color: rgba(0, 120, 215, 0.3);
}
#closeButton:hover {
    background-color: rgba(255, 0, 0, 0.7);
    color: white;
}

/* Labels */
QLabel {
    color: #333333; /* Standard text color */
    font-weight: bold;
    background-color: transparent; /* Ensure labels are transparent */
}

/* Result Label */
#resultLabel {
    color: #005a9e; /* Dark blue text */
    background-color: rgba(0, 120, 215, 0.1); /* Semi-transparent light blue */
    border: 1px solid #0078d7;
    border-radius: 5px;
    padding: 10px;
    font-size: 12pt;
    font-weight: bold;
    margin: 5px 0;
}

/* Tooltip Styling */
QToolTip {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #cccccc;
    padding: 5px;
    border-radius: 3px;
}

/* Buttons */
QPushButton {
    background-color: #e1e1e1;
    border: 1px solid #cccccc;
    padding: 8px 16px;
    border-radius: 5px;
}

QPushButton:hover {
    background-color: #d1d1d1;
    border: 1px solid #0078d7;
}

QPushButton:pressed {
    background-color: #c1c1c1;
}

/* Line Edits and Spin Boxes */
QLineEdit, QDoubleSpinBox {
    background-color: #ffffff;
    border: 1px solid #cccccc;
    border-radius: 5px;
    padding: 5px;
    color: #333333;
}

QLineEdit:focus, QDoubleSpinBox:focus {
    border: 1px solid #0078d7; /* Highlight color on focus */
}

QDoubleSpinBox::up-button, QDoubleSpinBox::down-button {
    subcontrol-origin: border;
    width: 16px;
    border-left: 1px solid #cccccc;
    border-radius: 3px;
}

QDoubleSpinBox::up-arrow, QDoubleSpinBox::down-arrow {
    width: 10px;
    height: 10px;
}

/* Sliders */
QSlider::groove:horizontal {
    border: 1px solid #cccccc;
    height: 8px;
    background: #e1e1e1;
    margin: 2px 0;
    border-radius: 4px;
}

QSlider::handle:horizontal {
    background: #0078d7; /* Blue handle */
    border: 1px solid #0078d7;
    width: 18px;
    margin: -5px 0; 
    border-radius: 9px;
}

/* Group Boxes */
QGroupBox {
    background-color: rgba(255, 255, 255, 0.5);
    border: 1px solid #cccccc;
    border-radius: 5px;
    margin-top: 1ex; /* leave space at the top for the title */
    font-weight: bold;
}
QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 5px;
}

/* Image Panels */
ScaledPixmapLabel, ImageSelectionLabel {
    background-color: rgba(255, 255, 255, 0.7);
    border: 1px dashed #cccccc;
    border-radius: 5px;
}

/* Progress Dialog */
QProgressDialog {
    background-color: #f0f0f0;
}

QProgressDialog QLabel {
    color: #333333;
}
